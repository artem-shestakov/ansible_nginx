upstream {{ item.name }} {
        {% if item.method is defined -%}
        {{ item.method }};
        {% endif -%}
        {% for server in item.servers -%}
        server {{ server }};
        {% endfor -%}
    }

server {
        {% for listen in item.listen -%}
        listen     {{ listen }};
        {% endfor -%}
        proxy_pass {{ item.name}};
    }